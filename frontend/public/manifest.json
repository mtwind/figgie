{
  "manifest_version": 3,
  "name": "Figgie Bot",
  "version": "0.1.0",
  "description": "A bot to assist with the Figgie game.",
  "icons": {
    "128": "figgie.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "index.html"
  }
}